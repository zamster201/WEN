QWidget {
    background-color: #1e1e1e;
    color: #eeeeee;
    font-family: Inter, sans-serif;
    font-size: 14px;
}

QPushButton {
    background-color: #2d2d2d;
    border: 1px solid #444;
    border-radius: 6px;
    padding: 10px;
    font-weight: bold;
}

QPushButton:hover {
    background-color: #3c3c3c;
}

QPushButton:pressed {
    background-color: #555;
    border: 1px solid #888;
}