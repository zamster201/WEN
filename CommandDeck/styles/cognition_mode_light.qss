QWidget {
    background-color: #f5f5f5;
    color: #222222;
    font-family: Inter, sans-serif;
    font-size: 14px;
}

QPushButton {
    background-color: #ffffff;
    border: 1px solid #bbb;
    border-radius: 6px;
    padding: 10px;
    font-weight: bold;
    color: #222;
}

QPushButton:hover {
    background-color: #e8e8e8;
}

QPushButton:pressed {
    background-color: #cccccc;
    border: 1px solid #888;
}
